---
import { Code } from "astro:components";
import type { BuiltinLanguage } from "shiki";

const { BASE_URL } = import.meta.env;

interface Props {
  title: string;
  description: string;
  tags: string[];
  slug: string;
  readingTime: string;
  pubDate: Date;
  snippet: {
    language: BuiltinLanguage;
    code: string;
  };
}

const { title, pubDate, description, tags, readingTime, snippet } = Astro.props;

const date = new Date(pubDate).toDateString();
const postUrl = `${BASE_URL}blog/${title.toLowerCase().replace(/\s/g, "-")}/`;
---

<div class="preview-container">
  <div class="description-container">
    <div>
      <div>
        <h2>
          <a href={postUrl}>
            {title}
          </a>
        </h2>
        <time datetime={pubDate.toDateString()}>
          {date}
        </time>
      </div>
      <p>{description}</p>
      {readingTime}
    </div>
    <div class="tags-container">
      {
        tags.map((tag) => (
          <a href={postUrl}>
            <button class="tag">{tag[0].toUpperCase() + tag.slice(1)}</button>
          </a>
        ))
      }
      <a href={postUrl}>
        <button class="tag"> Read Post </button>
      </a>
    </div>
  </div>
  <div class="container-like-image">
    <a href={postUrl}>
      <button class="code-tag">
        {snippet.language[0].toUpperCase() + snippet.language.slice(1)}
      </button>
    </a>
    <Code
      code={snippet.code}
      lang={snippet.language}
      theme="tokyo-night"
      wrap={true}
    />
  </div>
</div>

<style>
  p {
    white-space: break-spaces;
  }

  .preview-container {
    margin-top: 40px;
    position: relative;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    align-items: stretch;
    gap: 0;
    width: 100%;
    background-color: var(--primary);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.15);
    border: 1px solid var(--neutral);
    transition: all 0.2s ease;
  }

  .preview-container:first-child {
    margin-top: 0;
  }

  .description-container {
    grid-column: 1 / -1;
    padding: 24px 20px 20px;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    z-index: 2;
    background-color: var(--primary);
    opacity: 1;
    border-radius: 12px 12px 0 0;
    position: relative;
    min-height: auto;
    border-bottom: 1px solid var(--neutral);
  }

  .description-container > div > div {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
    margin-bottom: 12px;
  }

  .description-container h2 {
    margin: 0;
    font-size: 1.5rem;
    line-height: 1.3;
    font-weight: 600;
  }

  .description-container h2 a {
    color: var(--text-color);
    transition: color 0.2s ease;
  }

  .description-container h2 a:hover {
    color: var(--contrast);
  }

  .description-container time {
    font-size: 0.85rem;
    opacity: 0.7;
    color: var(--text-color);
  }

  .description-container p {
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
    color: var(--text-color);
    opacity: 0.9;
  }

  a {
    color: var(--text-color);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
    color: var(--contrast);
    transition: color 0.3s;
  }

  pre {
    padding: 8px;
    color: var(--text-color);
    border-top-left-radius: unset !important;
  }

  .code-tag {
    background-color: var(--neutral);
    color: var(--text-color);
    padding: 6px 12px;
    border: none;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 500;
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }

  .code-tag:hover {
    opacity: 1;
  }

  [data-theme="light"] .code-tag {
    background-color: var(--secondary);
    color: var(--text-color);
    opacity: 0.9;
  }

  [data-theme="light"] .container-like-image {
    background-color: #1d2433;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  @media (prefers-color-scheme: light) {
    .code-tag {
      background-color: var(--secondary);
      color: var(--text-color);
      opacity: 0.9;
    }

    .container-like-image {
      background-color: #1d2433;
      border-top: 1px solid rgba(0, 0, 0, 0.1);
    }
  }

  .tags-container {
    margin-top: 16px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    width: 100%;
    flex-wrap: wrap;
  }

  .tag {
    background-color: var(--text-color);
    color: var(--primary);
    padding: 12px 18px;
    border-radius: 8px;
    border: none;
    width: 100%;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: center;
    min-height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .tag button {
    color: var(--text-color);
    text-decoration: none;
  }

  .tag:hover {
    background-color: var(--contrast);
  }

  .preview-container {
    transition: all 0.2s ease;
  }

  .preview-container:active {
    transform: scale(0.98);
  }

  @media (hover: hover) {
    .preview-container:hover {
      transform: translateY(-2px);
    }

    .preview-container:hover .description-container,
    .preview-container:hover .container-like-image {
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    }

    .preview-container:hover .description-container {
      background-color: var(--primary);
    }
  }

  .container-like-image {
    position: relative;
    grid-column: 1 / -1;
    opacity: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding: 16px;
    border-radius: 0 0 12px 12px;
    z-index: 1;
    background-color: var(--code-background);
    min-height: 120px;
    max-height: 200px;
    overflow: hidden;
    box-sizing: border-box;
    border-top: 1px solid var(--neutral);
  }

  .container-like-image button {
    text-decoration: none;
    cursor: pointer;
    pointer-events: auto;
  }

  .container-like-image a {
    pointer-events: auto;
  }

  .container-like-image a:hover,
  .container-like-image button:hover {
    text-decoration: underline;
    color: var(--contrast);
    transition: color 0.3s;
  }

  .container-like-image pre {
    margin: 0 !important;
    padding: 0 !important;
    font-size: 0.75rem;
    overflow-x: auto;
    max-height: 150px;
    background-color: transparent !important;
  }

  .container-like-image .astro-code {
    margin: 0 !important;
    padding: 0 !important;
    background-color: transparent !important;
    border-radius: 0 !important;
  }

  .container-like-image .astro-code pre {
    margin: 0 !important;
    padding: 0 !important;
  }

  .container-like-image .astro-code code {
    padding: 0 !important;
  }

  .container-like-image .code-tag {
    margin-bottom: 8px;
  }

  @media (min-width: 720px) {
    .preview-container {
      margin-top: 60px;
      gap: 0;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
      border: 1px solid var(--neutral);
    }

    .description-container {
      border-bottom: 1px solid var(--neutral);
    }

    .tags-container {
      flex-direction: row;
      gap: 10px;
      align-items: center;
    }

    .tag {
      width: auto;
    }

    .container-like-image,
    .description-container {
      padding: 24px;
      border-radius: 8px;
      position: relative;
      height: fit-content;
    }

    .description-container {
      background-color: var(--primary);
      border-bottom-left-radius: unset;
      border-bottom-right-radius: unset;
      padding: 32px 28px 28px;
    }

    .container-like-image {
      background-color: var(--code-background);
      opacity: unset;
      border-top-left-radius: unset;
      border-top-right-radius: unset;
      padding: 20px;
      border-top: 1px solid var(--neutral);
    }

    .description-container > div > div {
      flex-direction: row;
      align-items: center;
    }

    .description-container h2 {
      font-size: 2rem;
    }
  }

  @media (min-width: 992px) {
    .preview-container {
      margin-top: 80px;
      box-shadow: none;
      border: none;
      background-color: transparent;
    }

    .description-container,
    .container-like-image {
      border-radius: 8px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }

    .description-container {
      border-bottom: none;
    }

    .preview-container:nth-child(even) .description-container {
      grid-column: 1 / 7;
      z-index: 2;
      margin-right: -80px;
      opacity: 0.95;
      grid-row: 1 / 2;
      padding: 40px 32px 32px;
      display: flex;
      align-self: center;
    }

    .preview-container:nth-child(even) .container-like-image {
      align-items: start;
      grid-column: 7 / 13;
      z-index: 1;
      padding: 40px 32px 32px;
      display: flex;
      flex-direction: column;
      align-self: center;
      height: fit-content;
    }

    .preview-container:nth-child(odd) .container-like-image {
      grid-column: 1 / 7;
      z-index: 1;
      padding: 40px 32px 32px;
      display: flex;
      flex-direction: column;
      align-self: center;
      height: fit-content;
    }

    .preview-container:nth-child(odd) .description-container {
      grid-column: 7 / 13;
      z-index: 2;
      margin-left: -80px;
      opacity: 0.95;
      grid-row: 1 / 2;
      padding: 40px 32px 32px;
      display: flex;
      align-self: center;
    }

    .description-container h2 {
      font-size: 2.25rem;
    }
  }
</style>
