---
import type { CollectionEntry } from "astro:content";

type Props = Omit<
  CollectionEntry<"blog">["data"],
  "author" | "snippet" | "isDraft" | "tags"
>;

export type { Props };

const { pubDate, readingTime, title } = Astro.props;
const formattedDate = new Date(pubDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<div class="hero-container">
  <div class="hero-header">
    <h1>{title}</h1>
    <div class="hero-meta">
      <time datetime={pubDate.toDateString()}>{formattedDate}</time>
      <span class="reading-time">{readingTime}</span>
    </div>
  </div>
  <div class="hero-content">
    <slot />
  </div>
</div>
<hr class="hero-divider" />

<style>
  .hero-container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
    padding: 0;
    gap: 24px;
  }

  .hero-header {
    display: flex;
    flex-direction: column;
    gap: 16px;
    width: 100%;
  }

  h1 {
    font-size: 2.5rem;
    line-height: 1.2;
    color: var(--text-color);
    margin: 0;
  }

  .hero-meta {
    display: flex;
    flex-direction: column;
    gap: 8px;
    color: var(--text-color);
    opacity: 0.8;
    font-size: 0.95rem;
  }

  .reading-time {
    color: var(--contrast);
  }

  .hero-content {
    width: 100%;
  }

  .hero-divider {
    width: 100%;
    border: none;
    border-top: 2px solid var(--contrast);
    margin: 0;
    opacity: 0.3;
  }

  @media screen and (min-width: 720px) {
    h1 {
      font-size: 3rem;
    }

    .hero-meta {
      flex-direction: row;
      gap: 16px;
      align-items: center;
    }

    .hero-container {
      gap: 28px;
    }
  }

  @media screen and (min-width: 900px) {
    h1 {
      font-size: 3.5rem;
    }

    .hero-container {
      gap: 32px;
    }
  }
</style>
