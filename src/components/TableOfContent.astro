---
interface IHeading {
  depth: number;
  slug: string;
  text: string;
}

export interface Props {
  headings: IHeading[];
}

const { headings } = Astro.props;
---

<aside id="toc-aside">
  <div class="toc-header">
    <h4>Table of contents</h4>
    <button
      id="toc-toggle"
      class="toc-btn"
      aria-label="Toggle table of contents"
      aria-expanded="false"
      aria-controls="article-content"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="chevron"
        aria-hidden="true"
      >
        <polyline points="6 9 12 15 18 9"></polyline>
      </svg>
    </button>
  </div>
  <ul id="article-content">
    {
      headings.map((heading) => (
        <li class={`h-${heading.depth}`}>
          <a href={`#${heading.slug}`}>{heading.text}</a>
        </li>
      ))
    }
  </ul>
</aside>

<script>
  // Active link highlighting
  const updateActiveLink = () => {
    const headings = document.getElementById("article-content");
    if (headings !== null) {
      const links = headings.querySelectorAll("a");
      links.forEach((link) => {
        if (window.location.hash === link.hash) {
          link.parentElement?.classList.add("active");
        } else {
          link.parentElement?.classList.remove("active");
        }
      });
    }
  };

  window.addEventListener("hashchange", updateActiveLink);
  window.addEventListener("load", updateActiveLink);

  // Mobile collapsible toggle
  const toggle = document.getElementById("toc-toggle");
  const list = document.getElementById("article-content");

  const isDesktop = () => window.innerWidth >= 1300;

  toggle?.addEventListener("click", () => {
    if (isDesktop()) return;
    const isOpen = list?.classList.toggle("open");
    toggle.setAttribute("aria-expanded", isOpen ? "true" : "false");
  });

  // Close when a link is clicked on mobile
  list?.querySelectorAll("a").forEach((link) => {
    link.addEventListener("click", () => {
      if (!isDesktop()) {
        list.classList.remove("open");
        toggle?.setAttribute("aria-expanded", "false");
      }
    });
  });
</script>

<style>
  /* ===== MOBILE / TABLET (default) ===== */
  aside {
    width: 100%;
    margin-bottom: 8px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    overflow: hidden;
  }

  .toc-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
    background-color: var(--secondary);
    cursor: pointer;
  }

  h4 {
    margin: 0;
    color: var(--contrast);
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  .toc-btn {
    background: transparent;
    border: none;
    color: var(--text-color);
    cursor: pointer;
    padding: 2px;
    display: flex;
    align-items: center;
    opacity: 0.6;
    transition: opacity 0.2s ease;
  }

  .toc-btn:hover {
    opacity: 1;
  }

  .chevron {
    transition: transform 0.2s ease;
  }

  .toc-btn[aria-expanded="true"] .chevron {
    transform: rotate(180deg);
  }

  /* List hidden by default on mobile */
  ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  ul.open {
    max-height: 600px;
    padding: 8px 0;
  }

  li {
    margin-left: 0;
    padding: 8px 16px;
  }

  li.active {
    background-color: var(--contrast);
  }

  li.active a {
    color: var(--primary);
  }

  a {
    text-decoration: none;
    white-space: break-spaces;
    color: var(--text-color);
    font-size: 0.875rem;
    line-height: 1.5;
  }

  a:hover {
    color: var(--contrast);
  }

  li:hover {
    background-color: var(--contrast);
  }

  li:hover a {
    color: var(--primary);
  }

  .h-1 {
    font-size: 0.875rem;
  }
  .h-2 {
    font-size: 0.825rem;
    padding-left: 28px;
  }
  .h-3 {
    font-size: 0.775rem;
    padding-left: 44px;
  }
  .h-4 {
    font-size: 0.725rem;
    padding-left: 60px;
  }
  .h-5 {
    font-size: 0.675rem;
    padding-left: 76px;
  }
  .h-6 {
    font-size: 0.625rem;
    padding-left: 92px;
  }

  /* ===== DESKTOP (â‰¥1300px) ===== */
  @media (min-width: 1300px) {
    aside {
      position: fixed;
      backdrop-filter: blur(10px);
      padding: 24px;
      right: 20px;
      top: 100px;
      width: 320px;
      opacity: 0.95;
      border-radius: 8px;
      bottom: 100px;
      overflow-y: auto;
      background-color: var(--secondary);
      box-shadow: -4px 0px 20px rgba(0, 0, 0, 0.1);
      max-height: calc(100vh - 200px);
      border: none;
      margin-bottom: 0;
    }

    .toc-header {
      background: none;
      padding: 0;
      cursor: default;
      margin-bottom: 16px;
    }

    h4 {
      font-size: 1.1rem;
    }

    .toc-btn {
      display: none;
    }

    /* Always show list on desktop */
    ul {
      max-height: none;
      overflow: visible;
      padding: 0;
      transition: none;
    }

    li {
      padding: 10px 8px;
      border-radius: 4px;
      transition: all 0.2s ease;
    }
  }
</style>
